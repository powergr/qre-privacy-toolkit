{
  "identifier": "default",
  "description": "Full System Access",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default",
    "dialog:default",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-read-text",

    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-stat",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-watch",
    {
      "identifier": "fs:scope",
      "allow": ["**"]
    },

    "process:allow-exit",
    "process:allow-restart",

    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}
