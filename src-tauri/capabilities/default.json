{
  "identifier": "default",
  "description": "Full System Access",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",

    "opener:default",
    "os:default",
    "dialog:default",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-read-text",

    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.github.com/repos/powergr/qre-privacy-toolkit/releases/latest"
        }
      ],
      "deny": []
    },

    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-stat",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-watch",
    "fs:allow-mkdir",
    "fs:allow-create",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APP_DATA/**",
        "$APP_CONFIG/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**",
        "$DESKTOP/**",
        "$PICTURE/**",
        "$VIDEO/**",
        "$AUDIO/**",
        "/storage/emulated/0",
        "/storage/emulated/0/**",
        "/sdcard",
        "/sdcard/**",
        "**"
      ]
    },

    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}
